generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "linux-musl"]
}

datasource db {
  provider = "postgresql"
  url      = env("DB_DATABASE_URL")
}

model User {
  id        String   @id @default(uuid()) @db.Uuid
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  version   Int
  login     String
  password  String
}

model Favorites {
  id String @id @default(uuid()) @db.Uuid

  albums  Album[]
  artists Artist[]
  tracks  Track[]
}

model Album {
  id       String @id @default(uuid()) @db.Uuid
  name     String
  year     Int
  artistId String @db.Uuid

  // favorites  Favorites @relation(fields: [favoriteId], references: [id])
  // favoriteId String    @db.Uuid
  Favorites   Favorites? @relation(fields: [favoritesId], references: [id])
  favoritesId String?    @db.Uuid
}

model Artist {
  id     String  @id @default(uuid()) @db.Uuid
  name   String
  grammy Boolean

  favorites  Favorites @relation(fields: [favoriteId], references: [id])
  favoriteId String    @db.Uuid
}

model Track {
  id       String @id @default(uuid()) @db.Uuid
  name     String
  albumId  String @db.Uuid
  artistId String @db.Uuid
  duration Int

  favorites  Favorites @relation(fields: [favoriteId], references: [id])
  favoriteId String    @db.Uuid
}
